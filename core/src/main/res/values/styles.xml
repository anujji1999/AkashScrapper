<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
    </style>

    <style name="chipText" parent="TextAppearance.MaterialComponents.Chip">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
    </style>


    <style name="ThinChip" parent="Widget.MaterialComponents.Chip.Action">
        <item name="android:textAppearance">@style/chipText</item>
        <item name="chipSurfaceColor">#00ffffff</item>

        <item name="android:textColor">@color/white</item>
        <item name="chipMinTouchTargetSize">0dp</item>
        <item name="textEndPadding">@dimen/small_margin</item>
        <item name="textStartPadding">@dimen/small_margin</item>
        <item name="chipEndPadding">0dp</item>
        <item name="chipStartPadding">0dp</item>
        <item name="strokeWidth">10dp</item>
        <item name="strokeColor">@color/black</item>
        <item name="android:strokeColor">@color/black</item>
        <item name="android:strokeWidth">10</item>
    </style>

    <style name="ThinChipSecondary" parent="ThinChip">
        <item name="android:textColor">@color/black</item>
        <item name="chipStrokeColor">@color/black</item>
        <item name="chipStrokeWidth">1dp</item>
    </style>

    <style name="RoundedBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/RoundedModalStyle</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>


    <style name="RoundedModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/rounded_dialog</item>
    </style>

    <style name="ButtonStyleChip" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/black</item>
        <item name="textAllCaps">false</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">@dimen/textsize_normal</item>
        <item name="android:background">@drawable/main_button_background</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:paddingStart">15dp</item>
        <item name="android:paddingEnd">15dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="SelectionTextView" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/greyText</item>
        <item name="textAllCaps">false</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">@dimen/textsize_normal</item>
        <item name="android:background">@drawable/light_grey_background_rounded</item>
    </style>

    <style name="NormalTextView" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="textAllCaps">false</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">@dimen/textsize_normal</item>
    </style>

</resources>